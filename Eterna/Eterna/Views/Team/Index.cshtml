@model IEnumerable<Employee>
<main id="main">
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li>Team</li>
            </ol>
            <h2>Team</h2>
        </div>
    </section>
    <section id="team" class="team">
        <div class="container">
            <div class="row">
                @foreach (Employee emp in Model)
                {
                    <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                        <div class="member">
                            <img src="~/assets/img/team/@emp.Image" alt="">
                            <h4>@emp.Name @emp.Surname</h4>
                            <span>@emp.Position.Name</span>
                            <p>@emp.Info</p>
                            <div class="social">
                                @if(!String.IsNullOrWhiteSpace(emp.TwitterUrl)) {<a href=@emp.TwitterUrl><i class="bi bi-twitter"></i></a>}
                                @if(!String.IsNullOrWhiteSpace(emp.FacebookUrl)) {<a href=@emp.FacebookUrl><i class="bi bi-facebook"></i></a>}
                                @if(!String.IsNullOrWhiteSpace(emp.IntagramUrl)) {<a href=@emp.IntagramUrl><i class="bi bi-instagram"></i></a>}
                                @if(!String.IsNullOrWhiteSpace(emp.LinkedInUrl)) {<a href=@emp.LinkedInUrl><i class="bi bi-linkedin"></i></a>}
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</main>